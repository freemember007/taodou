//-------------------- 顶栏 --------------------//	
@import 'basecss.styl'
#top-container
	margin-left 240px
	margin-bottom 50px
	padding 20px
	height 80px
	background #fff
#breadcrumb
	display inline-block
	font-size 24px
	margin-bottom 20px
#add-input
	display inline-block
	width 85%
	height 24px
	//background #eee
	border-radius 2px
	border 0px
	vertical-align middle
#add-button
	display inline-block
	margin-left 10px
	margin-bottom 5px
	padding 9px 16px
	font-size 12px
	color #fff
	background none repeat scroll 0% 0% rgb(236, 79, 17)
	border-radius 2px
	cursor pointer