//-------------------- 左栏 --------------------//
@import 'basecss.styl'
#leftContainer
	padding 20px
	background-color #000
	color #ccc
	width 200px
	height 900px
	fixed()
#leftHead
	margin-top 20px
	height 50px
	overflow hidden
#logo
	font-size 18px
	position fixed
	left 20px
	top 15px
	color #fff
.btn-group	
	position absolute
	vertical-align middle
	display inline-block
	right 20px
	top 14px
.leftHeadIcon
	width 24px
	height 24px
	float right
form input[type="search"]
	background none repeat scroll 0% 0% transparent
	border 0px none
	margin 0px
	width 190px
	color white
	box-shadow none
#leftContent
	width 160px
	margin 0 auto
.menuHead
	line-height 2
	font-weight bold
	font-size 14px
	text-align left
.menuItem
	line-height 2
	font-weight normal
	font-size 12px
	list-style-type none
	text-align left
.menuItem a:visited
	color #ccc
