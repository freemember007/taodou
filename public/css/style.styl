//--------------------　全局 --------------------//

body
	padding 0px
	font 12px "Lucida Grande", Helvetica, Arial, sans-serif
	background #ccc
a
	color #999
a:hover
	color #666
.lfloat
	float left
.rfloat
	float: right
fixed()
	position fixed

alignCenter()
	margin 0px auto

//-------------------- 导航 --------------------//

.fullWidth
	width 100%
	fixed()

//--------------------　主栏 --------------------//

#mainContainer
	// width 940px
	alignCenter()
	margin-top 60px

//-------------------- 左栏 --------------------//

#leftContainer
	background-color #000
	padding 50px
	color #999
	width 90px
	height 900px
	fixed()
.menuHead
	line-height 2
	font-weight bold
	font-size 14px
	text-align right
.menuItem
	line-height 2
	font-weight normal
	font-size 12px
	list-style-type none
	text-align right
	
//-------------------- 右栏 --------------------//

#rightContainer
	margin-left 240px
	// width 800px
	height 900px
.item
	display	block
	height 320px
	width 180px
	overflow hidden
.thumbLink
	display block
	width 150px
	height 150px
.itemDesc
	margin-top 10px
	// height 80px
	width 150px
	vertical-align bottom
.title
	margin-top 15px
	height 36px
	color #000
	line-height 1.5
	display inline-block
	overflow hidden
.itemBottom
	margin-top 5px
.itemButtonArea
	margin-top 5px
	height 30px
.itemSite
	color #999
.itemPrice
	color red
	font-size 12px
	font-weight bold
	margin-left 25px


//-------------------- detailView --------------------//

#modal-wrapper
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background none repeat scroll 0% 0% rgba(0, 0, 0, 0.3)
	z-index 10000

#close
	float none
	padding 12px
	height 16px
	width 22px
	text-shadow none
	font-size 42px
	font-weight 200
	margin-left 4px
